{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./api",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "lib": ["es2020", "dom"]
  },
  "include": ["api/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
} 